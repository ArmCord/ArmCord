{
    "compilerOptions": {
        "exactOptionalPropertyTypes": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "src",
        "lib": ["ESNext", "DOM"],
        "target": "ESNext",
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
