{
    "compilerOptions": {
        "exactOptionalPropertyTypes": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "src",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "target": "ESNext",
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "sourceMap": true,
        "noEmit": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
